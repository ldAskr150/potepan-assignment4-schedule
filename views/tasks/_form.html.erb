<%= form_for task do |f| %>
    <table>
        <tr>
            <th><%= f.label :title, "タイトル" %></th>
            <td><%= f.text_field :title %></td>
        </tr>
        <tr>
            <th><%= f.label :description, "スケジュールメモ" %></th>
            <td><%= f.text_area :description %></td>
        </tr>
        <tr>
            <th><%= f.label :start, "開始日" %></th>
            <td><%= f.datetime_field :start %></td>
        </tr>
        <tr>
            <th><%= f.label :finish, "終了日" %></th>
            <td><%= f.datetime_field :finish %></td>
        </tr>
        <tr>
            <th><%= f.label :allday, "終日" %></th>
            <td><%= f.check_box :allday %></td>
        </tr>
    </table>
    <%= f.submit "スケジュールを登録/更新する" %>
<% end %>